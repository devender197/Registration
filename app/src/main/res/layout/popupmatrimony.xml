<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="@dimen/dim_40"
        android:layout_height="@dimen/dim_40"
        android:layout_gravity="bottom|right"
        android:src="@drawable/add24"
        fab:fab_type="normal"
        fab:fab_shadow="true"
        fab:fab_colorNormal="#1baae4"
        fab:fab_colorPressed="#3f3f3f"
        fab:fab_colorRipple="#f8c583"

        android:layout_above="@+id/fab"
        android:layout_toLeftOf="@+id/fab"
        android:layout_toStartOf="@+id/fab" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="@dimen/dim_40"
        android:layout_height="@dimen/dim_40"
        android:layout_gravity="bottom|right"
        android:src="@drawable/add24"
        fab:fab_type="normal"
        fab:fab_shadow="true"
        fab:fab_colorNormal="#1baae4"
        fab:fab_colorPressed="#3f3f3f"
        fab:fab_colorRipple="#f8c583"

        android:layout_above="@+id/fab2"
        android:layout_toLeftOf="@+id/fab2"
        android:layout_toStartOf="@+id/fab2" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab4"
        android:layout_width="@dimen/dim_40"
        android:layout_height="@dimen/dim_40"
        android:layout_gravity="bottom|right"
        android:src="@drawable/add24"
        fab:fab_type="normal"
        fab:fab_shadow="true"
        fab:fab_colorNormal="#1baae4"
        fab:fab_colorPressed="#3f3f3f"
        fab:fab_colorRipple="#f8c583"

        android:layout_above="@+id/fab3"
        android:layout_toLeftOf="@+id/fab3"
        android:layout_toStartOf="@+id/fab3" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="@dimen/dim_40"
        android:layout_height="@dimen/dim_40"
        android:layout_gravity="bottom|right"
        android:src="@drawable/add24"
        fab:fab_type="normal"
        fab:fab_shadow="true"
        fab:fab_colorNormal="#1baae4"
        fab:fab_colorPressed="#3f3f3f"
        fab:fab_colorRipple="#f8c583"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Profile"
        android:textStyle="bold"

        android:textColor="#ffffff"
        android:id="@+id/textView62"
        android:layout_above="@+id/fab3"
        android:layout_toLeftOf="@+id/fab4"
        android:layout_toStartOf="@+id/fab4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Liked By"
        android:textStyle="bold"

        android:textColor="#ffffff"
        android:id="@+id/textView63"
        android:layout_alignBottom="@+id/fab3"
        android:layout_toLeftOf="@+id/fab3"
        android:layout_toStartOf="@+id/fab3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting Preference"
        android:id="@+id/textView64"
        android:textStyle="bold"

        android:textColor="#ffffff"
        android:layout_above="@+id/fab"
        android:layout_alignRight="@+id/fab3"
        android:layout_alignEnd="@+id/fab3" />

</RelativeLayout>