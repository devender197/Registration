<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim_10"
        android:background="@drawable/myborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dim_70"
        android:layout_height="@dimen/dim_70"
        android:layout_marginTop="@dimen/dim_41"
        android:id="@+id/ad_Logo"
        android:background="@drawable/mybordergrey"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name ( नाम ):"
        android:textStyle="bold"
        android:textSize="@dimen/dim_12"
        android:id="@+id/textView"
        android:layout_marginTop="@dimen/dim_18"
        android:layout_below="@+id/ad_Logo"
        android:layout_alignLeft="@+id/parental_village"
        android:layout_alignStart="@+id/parental_village" />

    <EditText
        android:layout_width="@dimen/dim_300"
        android:layout_height="wrap_content"
        android:id="@+id/parental_village"
        android:singleLine="true"
        android:background="@drawable/mybordergrey"
        android:padding="@dimen/dim_10"
        android:textSize="@dimen/dim_12"
        android:hint="Firstname middleName LastName"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Father Name (पिता का नाम ):"
        android:textSize="@dimen/dim_12"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_6"
        android:layout_below="@+id/parental_village"
        android:layout_alignLeft="@+id/parental_village"
        android:layout_alignStart="@+id/parental_village" />

    <EditText
        android:layout_width="@dimen/dim_300"
        android:layout_height="wrap_content"
        android:id="@+id/Current_address"
        android:textSize="@dimen/dim_12"
        android:background="@drawable/mybordergrey"
        android:padding="@dimen/dim_10"
        android:singleLine="true"
        android:hint="Firstname middleName LastName"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mother Name (माँ का नाम):"
        android:textSize="@dimen/dim_12"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:layout_below="@+id/Current_address"
        android:layout_alignLeft="@+id/Current_address"
        android:layout_alignStart="@+id/Current_address"
        android:layout_marginTop="@dimen/dim_6" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/permenant_address"
        android:textSize="@dimen/dim_12"
        android:singleLine="true"
        android:background="@drawable/mybordergrey"
        android:padding="@dimen/dim_10"
        android:hint="Firstname middleName LastName"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GrandFatherName ( दादाजी का नाम ):"
        android:id="@+id/textView4"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_below="@+id/permenant_address"
        android:layout_alignLeft="@+id/permenant_address"
        android:layout_alignStart="@+id/permenant_address"
        android:layout_marginTop="@dimen/dim_6" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="@dimen/dim_12"
        android:singleLine="true"
        android:background="@drawable/mybordergrey"
        android:padding="@dimen/dim_10"
        android:hint="Firstname middleName LastName"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spouse Name/Husband Name "
        android:id="@+id/textView5"
        android:textSize="@dimen/dim_12"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_6"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="@dimen/dim_300"
        android:layout_height="wrap_content"
        android:id="@+id/reg1spousename"
        android:textSize="@dimen/dim_12"
        android:singleLine="true"
        android:background="@drawable/mybordergrey"
        android:padding="@dimen/dim_10"
        android:hint="Firstname middleName LastName"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Father's Gautra Name "
        android:id="@+id/textView6"
        android:textSize="@dimen/dim_12"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_6"
        android:layout_below="@+id/reg1spousename"
        android:layout_alignLeft="@+id/reg1spousename"
        android:layout_alignStart="@+id/reg1spousename" />

    <EditText
        android:layout_width="@dimen/dim_300"
        android:layout_height="wrap_content"
        android:id="@+id/RegFGautraname"
        android:textSize="@dimen/dim_12"
        android:singleLine="true"
        android:background="@drawable/mybordergrey"
        android:padding="@dimen/dim_10"
        android:hint="Firstname middleName LastName"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender ( लिंग )"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:textSize="@dimen/dim_12"
        android:layout_marginTop="@dimen/dim_58"
        android:layout_below="@+id/RegFGautraname"
        android:layout_alignLeft="@+id/RegFGautraname"
        android:layout_alignStart="@+id/RegFGautraname" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/RegMale"
        android:checked="false"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/RegFemale"
        android:checked="false"
        android:layout_below="@+id/textView7"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Of Birth ( जन्म की तारीख )"
        android:id="@+id/textView8"
        android:textSize="@dimen/dim_12"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_6"
        android:layout_below="@+id/RegMale"
        android:layout_alignLeft="@+id/RegMale"
        android:layout_alignStart="@+id/RegMale" />

    <EditText
        android:layout_width="@dimen/dim_250"
        android:layout_height="wrap_content"
        android:id="@+id/RegDate"
        android:textSize="@dimen/dim_12"
        android:singleLine="true"
        android:enabled="false"
        android:inputType="date"
        android:background="@drawable/mybordergrey"
        android:padding="@dimen/dim_10"
        android:hint="day/month/year"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next ( अगली प्रविष्टि )"
        android:id="@+id/RegPersonalData"
        android:layout_below="@+id/RegDate"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_marginBottom="@dimen/dim_20"
        android:layout_alignLeft="@+id/RegDate"
        android:layout_alignStart="@+id/RegDate"
        android:layout_alignRight="@+id/RegFGautraname"
        android:layout_alignEnd="@+id/RegFGautraname" />

    <ImageView
        android:layout_width="@dimen/dim_30"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/calender"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignRight="@+id/RegPersonalData"
        android:layout_alignEnd="@+id/RegPersonalData" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother's Gautra Name"
            android:id="@+id/textView94"
            android:textSize="@dimen/dim_12"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dim_6"
            android:layout_below="@+id/RegFGautraname"
            android:layout_alignLeft="@+id/RegFGautraname"
            android:layout_alignStart="@+id/RegFGautraname" />

        <EditText
            android:layout_width="@dimen/dim_300"
            android:layout_height="wrap_content"
            android:id="@+id/RegGautraName"
            android:textSize="@dimen/dim_12"
            android:singleLine="true"
            android:background="@drawable/mybordergrey"
            android:padding="@dimen/dim_10"
            android:hint="Firstname middleName LastName"
            android:layout_below="@+id/textView94"
            android:layout_alignLeft="@+id/textView94"
            android:layout_alignStart="@+id/textView94" />


    </RelativeLayout>
</ScrollView>