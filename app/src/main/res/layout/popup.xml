<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/myborder"
        android:padding="@dimen/dim_20"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number:"
            android:id="@+id/popcontactno"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="36dp" />

        <TextView
            android:layout_width="@dimen/dim_300"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:padding="@dimen/dim_5"
            android:background="@drawable/mybordergrey"
            android:id="@+id/login"
            android:layout_below="@+id/popcontactno"
            android:layout_alignLeft="@+id/popcontactno"
            android:layout_alignStart="@+id/popcontactno" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:id="@+id/textView51"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="@dimen/dim_300"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:padding="@dimen/dim_5"
            android:background="@drawable/mybordergrey"
            android:id="@+id/textView52"
            android:layout_below="@+id/textView51"
            android:layout_alignLeft="@+id/textView51"
            android:layout_alignStart="@+id/textView51" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Id:"
            android:id="@+id/textView53"
            android:layout_below="@+id/login"
            android:layout_alignLeft="@+id/login"
            android:layout_alignStart="@+id/login"
            android:layout_marginTop="29dp" />

        <TextView
            android:layout_width="@dimen/dim_300"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:padding="@dimen/dim_5"
            android:background="@drawable/mybordergrey"
            android:id="@+id/password"
            android:layout_below="@+id/textView53"
            android:layout_alignLeft="@+id/textView53"
            android:layout_alignStart="@+id/textView53" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get GMap Location"
            android:textColor="#ffffff"
            android:id="@+id/button7"
            android:background="@drawable/inquirybutton"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView52"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView52"
            android:layout_alignEnd="@+id/textView52" />

    </RelativeLayout>
</RelativeLayout>