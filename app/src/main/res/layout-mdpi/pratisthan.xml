<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"

    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:background="@drawable/myborder"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name:"
            android:id="@+id/textView59"
            android:layout_marginTop="46dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/P_shopname"
            android:layout_alignStart="@+id/P_shopname" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/P_shopname"
            android:padding="5dp"
            android:singleLine="true"
            android:background="@drawable/mybordergrey"
            android:layout_below="@+id/textView59"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Description:"
            android:id="@+id/textView61"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/P_shopname"
            android:layout_alignLeft="@+id/P_shopdescription"
            android:layout_alignStart="@+id/P_shopdescription" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:padding="5dp"
            android:id="@+id/P_shopdescription"
            android:scrollbars="horizontal"
            android:gravity="top|left"
            android:background="@drawable/mybordergrey"
            android:layout_below="@+id/textView61"
            android:layout_alignLeft="@+id/P_shopname"
            android:layout_alignStart="@+id/P_shopname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Contact No:"
            android:id="@+id/textView67"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/P_shopdescription"
            android:layout_alignLeft="@+id/textView61"
            android:layout_alignStart="@+id/textView61" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/P_contactno"
            android:padding="5dp"
            android:inputType="phone"
            android:singleLine="true"
            android:background="@drawable/mybordergrey"
            android:layout_below="@+id/textView67"
            android:layout_alignLeft="@+id/P_shopdescription"
            android:layout_alignStart="@+id/P_shopdescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Address:"
            android:id="@+id/textView68"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/P_contactno"
            android:layout_alignLeft="@+id/textView67"
            android:layout_alignStart="@+id/textView67" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/P_address"
            android:gravity="top|left"
            android:scrollbars="horizontal"
            android:padding="5dp"
            android:background="@drawable/mybordergrey"
            android:layout_below="@+id/textView68"
            android:layout_alignLeft="@+id/P_contactno"
            android:layout_alignStart="@+id/P_contactno" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop EMail:"
            android:id="@+id/textView69"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/P_address"
            android:layout_alignLeft="@+id/P_email"
            android:layout_alignStart="@+id/P_email" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/P_email"
            android:padding="5dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:background="@drawable/mybordergrey"
            android:layout_below="@+id/textView69"
            android:layout_alignLeft="@+id/textView71"
            android:layout_alignStart="@+id/textView71" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Type:"
            android:id="@+id/textView70"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/P_email"
            android:layout_alignLeft="@+id/P_email"
            android:layout_alignStart="@+id/P_email" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/P_shoptype"
            android:padding="5dp"
            android:background="@drawable/mybordergrey"
            android:layout_below="@+id/textView70"
            android:layout_alignLeft="@+id/textView70"
            android:layout_alignStart="@+id/textView70"
            android:layout_alignRight="@+id/P_email"
            android:layout_alignEnd="@+id/P_email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop State:"
            android:layout_marginTop="10dp"
            android:id="@+id/textView71"
            android:layout_below="@+id/P_shoptype"
            android:layout_alignLeft="@+id/P_contactno"
            android:layout_alignStart="@+id/P_contactno" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/P_state"
            android:background="@drawable/mybordergrey"
            android:layout_below="@+id/textView71"
            android:padding="5dp"
            android:singleLine="true"
            android:layout_alignLeft="@+id/P_shoptype"
            android:layout_alignStart="@+id/P_shoptype"
            android:layout_alignRight="@+id/P_shoptype"
            android:layout_alignEnd="@+id/P_shoptype" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop District:"
            android:layout_marginTop="10dp"
            android:id="@+id/textView72"
            android:layout_below="@+id/P_state"
            android:layout_alignLeft="@+id/textView71"
            android:layout_alignStart="@+id/textView71" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/P_district"
            android:background="@drawable/mybordergrey"
            android:layout_below="@+id/textView72"
            android:padding="5dp"
            android:singleLine="true"
            android:layout_alignLeft="@+id/P_state"
            android:layout_alignStart="@+id/P_state"
            android:layout_alignRight="@+id/P_state"
            android:layout_alignEnd="@+id/P_state" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Image:"
            android:id="@+id/textView73"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/P_district"
            android:layout_alignLeft="@+id/textView72"
            android:layout_alignStart="@+id/textView72" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/mybordergrey"
            android:id="@+id/P_image"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_below="@+id/textView73"
            android:layout_alignLeft="@+id/textView73"
            android:layout_alignStart="@+id/textView73"
            android:layout_alignRight="@+id/P_district"
            android:layout_alignEnd="@+id/P_district" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Shop lats/longs"
            android:id="@+id/textView74"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/P_image"
            android:layout_alignLeft="@+id/P_image"
            android:layout_alignStart="@+id/P_image" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/P_latslongs"
            android:padding="5dp"
            android:enabled="false"
            android:background="@drawable/mybordergrey"
            android:layout_alignBottom="@+id/button8"
            android:layout_alignLeft="@+id/textView74"
            android:layout_alignStart="@+id/textView74"
            android:layout_below="@+id/textView74" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:id="@+id/button6"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/amount"
            android:layout_alignLeft="@+id/amount"
            android:layout_alignStart="@+id/amount"
            android:layout_alignRight="@+id/amount"
            android:layout_alignEnd="@+id/amount" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Get Lats/Longs"
            android:id="@+id/button8"
            android:layout_alignRight="@+id/P_district"
            android:layout_alignEnd="@+id/P_district"
            android:layout_toRightOf="@+id/P_latslongs"
            android:layout_toEndOf="@+id/P_latslongs"
            android:layout_below="@+id/textView74" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Shop Timing"
            android:id="@+id/textView"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/P_latslongs"
            android:layout_alignLeft="@+id/P_latslongs"
            android:layout_alignStart="@+id/P_latslongs" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/shoptiming"
            android:gravity="top|left"
            android:scrollbars="horizontal"
            android:padding="5dp"
            android:background="@drawable/mybordergrey"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Monthly Holiday"
            android:id="@+id/textView2"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/shoptiming"
            android:layout_alignLeft="@+id/shoptiming"
            android:layout_alignStart="@+id/shoptiming" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/monthlyholiday"
            android:padding="5dp"
            android:enabled="false"
            android:background="@drawable/mybordergrey"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_alignRight="@+id/shoptiming"
            android:layout_alignEnd="@+id/shoptiming" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/mybordergrey"
            android:id="@+id/visitingcard"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/monthlyholiday"
            android:layout_alignStart="@+id/monthlyholiday"
            android:layout_alignRight="@+id/monthlyholiday"
            android:layout_alignEnd="@+id/monthlyholiday" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Visiting Card"
            android:id="@+id/textView3"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/monthlyholiday"
            android:layout_alignLeft="@+id/visitingcard"
            android:layout_alignStart="@+id/visitingcard" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Inside View"
            android:id="@+id/textView4"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/visitingcard"
            android:layout_alignLeft="@+id/visitingcard"
            android:layout_alignStart="@+id/visitingcard" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/mybordergrey"
            android:id="@+id/insideview"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignRight="@+id/visitingcard"
            android:layout_alignEnd="@+id/visitingcard" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Amount:"
            android:id="@+id/textView5"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/insideview"
            android:layout_alignLeft="@+id/insideview"
            android:layout_alignStart="@+id/insideview" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/amount"
            android:padding="5dp"
            android:enabled="false"
            android:background="@drawable/mybordergrey"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignRight="@+id/insideview"
            android:layout_alignEnd="@+id/insideview" />

    </RelativeLayout>
</ScrollView>