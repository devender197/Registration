<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#48cfad" />
         <gradient android:angle="-90" android:startColor="#1baae4" android:endColor="#1baae4"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#1baae4" />
         <solid android:color="#1baae4"/>
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#1baae4" />
         <gradient android:angle="-90" android:startColor="#1baae4" android:endColor="#1baae4" />
     </shape>
 </item>
</selector>